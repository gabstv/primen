    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug AtlasPreview",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/atlaspreview/main.go",
            "args": [
                "examples/shared/people.dat"
            ]
        },
        {
            "name": "Debug TiledAnim",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/examples/animation",
            "program": "${workspaceFolder}/examples/animation/main.go"
        },
        {
            "name": "Debug Aseprimen (build)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/examples/shared",
            "program": "${workspaceFolder}/cmd/aseprimen/main.go",
            "args": [
                "build",
                "people.tmpl.json"
            ]
        },
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": [
            ],
            //"buildFlags": "-tags example this_doesnt_work_yet"
        }
    ]
}